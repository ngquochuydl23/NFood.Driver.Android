<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="android:fontFamily">@font/default_font</item>
    <item name="android:statusBarColor">@color/white</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:navigationBarColor">@color/black</item>
  </style>

  <style name="MapTheme" parent="AppTheme">
    <item name="android:statusBarColor">@color/light_gray</item>
    <item name="android:windowLightStatusBar">false</item>
  </style>

  <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="itemTextColor">@color/white</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/green</item>
    <item name="android:statusBarColor">@color/green</item>
    <item name="android:navigationBarColor">@color/green</item>
    <item name="android:windowLightStatusBar">false</item>
  </style>

  <style name="TranslucentStatus" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="android:windowContentOverlay">@null</item>
    <item name="windowActionBarOverlay">true</item>
    <item name="colorPrimary">@android:color/transparent</item>
    <item name="windowActionBar">false</item>
    <item name="android:statusBarColor">#00FFFFFF</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:fontFamily">@font/default_font</item>
  </style>

  <style name="ButtonStyle">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">16.5sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:background">@drawable/layout_border_item_size5</item>
    <item name="android:backgroundTint">@color/green</item>
    <item name="android:layout_height">50dp</item>
  </style>

  <style name="ItemSetting">
    <item name="android:textColor">@color/titleTextColor</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:maxLines">1</item>
    <item name="android:drawableEnd">@drawable/icon_arrow_right</item>
    <item name="android:drawablePadding">20dp</item>
    <item name="android:height">65dp</item>
    <item name="android:layout_marginTop">1dp</item>
    <item name="android:background">@color/white</item>
    <item name="android:paddingHorizontal">20dp</item>
  </style>

  <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal" />

  <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="bottomSheetStyle">@style/BottomSheet</item>
  </style>

  <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

  <style name="Theme.AppCompat.Transparent.NoActionBar" parent="AppTheme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowBackground">@android:color/transparent</item>
  </style>

</resources>
